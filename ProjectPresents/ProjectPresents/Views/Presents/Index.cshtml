                }
            </div>
            <div>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <button class="buttonDel">Премахни</button>
                    </a>
                }
            </div>
        </div>



